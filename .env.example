# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5001
APP_ENV=development

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# Set to true only if your database requires SSL (external databases)
DB_SSL=false

# Debug Mode (set to true to enable verbose logging)
DEBUG=false

# Client URLs for CORS (comma-separated if multiple)
CLIENT_URL=http://localhost:5173

# JWT secret used to sign tokens (set a long random value)
JWT_SECRET=change-me-use-a-long-random-secret

# Encryption key (hex string). In production this MUST be set.
ENCRYPTION_KEY=change-me-64-hex-chars

# Admin seeding (used by `pnpm tsx src/scripts/seedAdmin.ts` or similar)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me
ADMIN_NOM=Admin
ADMIN_PRENOM=System

